{
  "name": "@legible-sync/monorepo",
  "version": "1.2.0",
  "description": "Monorepo for LegibleSync - What You See Is What It Does",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "test": "lerna run test",
    "lint": "lerna run lint",
    "lint:md": "markdownlint '**/*.md'",
    "typecheck": "lerna run typecheck",
    "clean": "lerna clean",
    "publish": "lerna publish",
    "dev:console": "lerna run --scope @legible-sync/example-console start",
    "dev:eda": "lerna run --scope @legible-sync/example-eda start",
    "dev:express": "lerna run --scope @legible-sync/example-express start",
    "dev:nextjs-sse": "lerna run --scope @legible-sync/example-nextjs-sse dev",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix"
    ],
    "*.md": [
      "markdownlint --fix"
    ]
  },
  "keywords": [
    "monorepo",
    "wysiwid",
    "legible-software",
    "software-architecture",
    "typescript"
  ],
  "author": "Mauro Stepanoski (https://maurostepanoski.ar)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mastepanoski/legiblesync.git"
  },
  "homepage": "https://github.com/mastepanoski/legiblesync",
  "devDependencies": {
    "conventional-changelog-cli": "^5.0.0",
    "husky": "^9.1.7",
    "lerna": "^9.0.0",
    "lint-staged": "^16.2.6",
    "markdownlint-cli": "^0.45.0"
  },
  "overrides": {
    "js-yaml": "^3.14.2",
    "glob": "^10.5.0",
    "markdownlint-cli": {
      "glob": "^11.1.0"
    },
    "@npmcli/package-json": {
      "glob": "^11.1.0"
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
