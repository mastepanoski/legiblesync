{
  "name": "@legible-sync/monorepo",
  "version": "1.0.0",
  "description": "Monorepo for LegibleSync - What You See Is What It Does",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "test": "lerna run test",
    "lint": "lerna run lint",
    "lint:md": "markdownlint '**/*.md'",
    "typecheck": "lerna run typecheck",
    "clean": "lerna clean",
    "bootstrap": "lerna bootstrap",
    "publish": "lerna publish",
    "dev:console": "lerna run --scope @legible-sync/example-console start",
    "dev:express": "lerna run --scope @legible-sync/example-express start",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "npm run typecheck"
    ],
    "*.md": [
      "markdownlint --fix"
    ]
  },
  "keywords": [
    "monorepo",
    "wysiwid",
    "legible-software",
    "software-architecture",
    "typescript"
  ],
  "author": "Mauro Stepanoski <https://maurostepanoski.ar>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mastepanoski/legiblesync.git"
  },
  "homepage": "https://github.com/mastepanoski/legiblesync",
  "devDependencies": {
    "husky": "^9.1.7",
    "lerna": "^8.0.0",
    "lint-staged": "^16.2.6",
    "markdownlint-cli": "^0.45.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
